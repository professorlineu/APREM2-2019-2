#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;


int main()
{
    int ival = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout <<" digite o numero" ;
    cout << "........";
    cin >> ival;

    if (ival % 2 == 0)
    {
        cout << "par" << endl;
    }
    else
    {
        cout << "imapar" << endl;
    }
    if (ival > 1)
    {
        cout << "positvo";
    }
    else if (ival < 1)
    {
        cout <<"negativo";
    }
}


