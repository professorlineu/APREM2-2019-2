#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;


int main()
{
    int i=0;
    int vet[6];
    int isoma=0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    for (i=0; i < 6; i++)
    {
        cout << "valor ";
        cin >> vet [i];
    }

    for (i=0 ; i<6; i++)
    {
        cout << "valor ";
        cin >> vet [i];
    }

     for(i = 0; i < 6; i++)
    {
        isoma = isoma + vet[i];

    }
    cout << endl << "Soma = " << isoma << endl << endl;

}
